<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div>
    <%= form.label :email, class: "form-label" %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div>
    <%= form.label :pravatar_num, class: "form-label" %>
    <%= form.text_field :pravatar_num, class: "form-control" %>
  </div>

  <div class="form-check">
    <%= form.label :admin, class: "form-check-label" %>
    <%= form.check_box :admin, class: "form-check-input" %>
  </div>

  <div>
    <%= form.label "Password", class: "form-label" %>
    <%= form.password_field :password_digest, value: user.password_digest, class: "form-control" %>
  </div>

  <div>
    <%= form.submit class: "btn btn-primary my-4" %>
  </div>
<% end %>
